mysql> delimiter //
mysql> create procedure SumOfDigits(in n int)
    -> begin
    -> declare sum int default 0;
    -> declare a int;
    -> declare digit int;
    -> set a = n;
    -> while a > 0 do
    -> set digit = a % 10;
    -> set sum = sum + digit;
    -> set a = a/10;
    -> end while;
    -> select concat('Sum of digits=',sum)as result;
    -> end //

